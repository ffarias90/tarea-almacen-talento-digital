<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/font-awesome.min.css">
    <link rel="stylesheet" href="/static/css/toastr.min.css">

    <script src="/static/js/jquery-3.5.1.min.js"></script>
    <script src="/static/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/toastr.min.js"></script>
    <script src="/static/js/bootbox.min.js"></script>
    <script src="/static/js/moment-with-locales.min.js"></script>
    <style>

    </style>
    <!--fin estilos-->
    <script>
        $(document).ready(function() {

            moment.locale("es");

            toastr.options = {
                "closeButton": true,
                "progressBar": true,
            }

            bootbox.addLocale("pancho", {
                OK: 'Aceptar',
                CANCEL: 'Cancelar',
                CONFIRM: 'Confirmar'
            });

            <% for (let error of errors) { %>
            toastr.error("<%= error %>", "Error");
            <% } %>

            <% for (let mensaje of mensajes) { %>
            toastr.success("<%= mensaje %>", "Mensaje del Sistema");
            <% } %>


        });
    </script>
</head>

<body>
    <div class="container">
        <div class="row mt-3 mb-5">
            <!--register-->
            <div class="col-md-6 col-sm-12">
                <h3 class="text-center">Registrar Usuario</h3>
                <form action="/register" method="POST" class="mt-5">
                    <div class="form-group row">
                        <label for="name" class="col-sm-4 col-form-label">Nombre</label>
                        <div class="col-sm-8">
                            <input required type="text" minlength="2" class="form-control" id="name" name="name" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input required type="text" minlength="2" class="form-control" id="email" name="email" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="name" class="col-sm-4 col-form-label">Almacen</label>
                        <div class="col-sm-8">
                            <input required type="text" class="form-control" id="almacen" name="name" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-sm-4 col-form-label">Password</label>
                        <div class="col-sm-8">
                            <input required type="password" class="form-control" id="password" name="password" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password_confirm" class="col-sm-4 col-form-label">Confirmar Password</label>
                        <div class="col-sm-8">
                            <input required type="password" class="form-control" id="password_confirm" name="password_confirm" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8 offset-sm-4">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </div>
                    </div>
                </form>

            </div>
            <!--login-->
            <div class="col-md-6 col-sm-12">
                <h3 class="text-center">Login</h3>
                <form action="/login" method="POST" class="mt-5">
                    <div class="form-group row">
                        <label for="email" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input required type="text" minlength="2" class="form-control" id="email" name="email" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-sm-3 col-form-label">Password</label>
                        <div class="col-sm-9">
                            <input required type="password" class="form-control" id="password" name="password" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8 offset-sm-4">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>







</body>

</html>
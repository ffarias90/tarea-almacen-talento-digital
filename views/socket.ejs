<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ejemplo de Socket</title>
    <style>
        body {
            font-family: sans-serif;
            text-align: center;
            padding: 3rem;
            font-size: 1.125rem;
            line-height: 1.5;
            transition: all 725ms ease-in-out;
        }
        
        h1 {
            font-size: 2rem;
            font-weight: bolder;
            margin-bottom: 1rem;
        }
        
        p {
            margin-bottom: 1rem;
            color: tomato;
        }
        
        button {
            cursor: pointer;
            appearance: none;
            border-radius: 4px;
            font-size: 1.25rem;
            padding: 0.75rem 1rem;
            border: 1px solid navy;
            background-color: dodgerblue;
            color: white;
        }
        
        #botones {
            background-color: coral;
            padding: 1rem;
            border-radius: 10px;
        }
    </style>
</head>

<body>

    <h1>I am a headline made with HTML</h1>
    <h3>Hola Mati</h3>
    <p id="mensaje">And I am a simple text paragraph. The color of this text is styled with CSS. Click the button below to remove me through the power JavaScript.</p>
    <button>Hide the text above</button>
    <div id="botones">
        <button id="saludo">Cargar Saludo</button>
        <button id="adios">Cargar Adiós</button>
    </div>












    <!--jquery-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!--libreria socket-->
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>

    <script>
        $('button').on('click', function() {
            $('p').css('opacity', 0);
        });

        $('#saludo').on('click', function() {
            $.get('/saludo', function(data) {
                console.log(data);
            });
        });

        $('#adios').on('click', function() {
            $.get('/adios', function(data) {
                console.log(data);
            });
        });

        //conectar socket con el puerto
        const socket = io('http://localhost:8000');

        //mensaje en consola navegador
        socket.on('saludo_s', function(data) {
            console.log('Llego del servidor la siguiente información', data);
            $('#mensaje').html(data.msg);

            //mensaje en terminal
            socket.emit('respuesta_s', {
                msg: 'Muchas gracias bro!!!'
            });
        });
    </script>
</body>

</html>